@model CMdm.UI.Web.Models.UserAdmin.UsersListViewModel

@{
    //page title
    ViewBag.Title = "Edit";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit New User
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("To List", "ListUsers")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn btn-warning">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn bg-purple">
                <i class="fa fa-floppy-o"></i>
                Save and Continue Edit
            </button>
            @*<span id="user-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Delete
            </span>*@
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
