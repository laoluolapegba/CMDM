@model CMdm.UI.Web.Models.Customer.CustomerIncomeModel
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.CUSTOMER_NO)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.CUSTOMER_NO)
                                    </div>
                                    <div class="col-md-9">
                                        @Html.CMdmDisplayFor(model => model.CUSTOMER_NO)
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.INCOME_BAND)
                                </div>
                                <div class="col-md-9">
                                    @Html.CMdmDropDownListFor(model => model.INCOME_BAND, Model.IncomeBand)
                                    @Html.ValidationMessageFor(model => model.INCOME_BAND)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.INITIAL_DEPOSIT)
                                </div>
                                <div class="col-md-9">
                                    @Html.CMdmDropDownListFor(model => model.INITIAL_DEPOSIT, Model.InitialDeposit)
                                    @Html.ValidationMessageFor(model => model.INITIAL_DEPOSIT)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



