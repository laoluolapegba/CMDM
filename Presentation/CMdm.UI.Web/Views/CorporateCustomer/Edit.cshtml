@model CMdm.UI.Web.Models.Customer.CorpCustModel
@{
    ViewBag.Title = "Corporate Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ReadOnlyForm", Model.CompDetailsModel.ReadOnlyForm);
    @Html.Hidden("ExceptionId", Model.CompDetailsModel.ExceptionId);
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Edit Customer - @Model.CompDetailsModel.CUSTOMER_NO
            @*<small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("Back To List", "Index")</small>*@
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-yellow">
                <i class="fa fa-floppy-o"></i>
                Save
            </button>
            <button type="submit" name="save-continue" class="btn bg-purple">
                <i class="fa fa-floppy-o"></i>
                Save &amp; Continue
            </button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}

<script type="text/javascript">
            $(document).ready(function () {
                if ($("#ReadOnlyForm").val() == "True") {
                    $(".input-validation-error").css({ background: "#ff9", color: "#000 !important;", });
                }
                $(".input-validation-error").css({ background: "#ff9", color: "#000 !important;", });
            });
</script>
