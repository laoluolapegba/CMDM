    <div class="modal-dialog">
        <div class="modal-content">
            <center><div id="loading"><img src="~/AdminLTE/dist/img/loading.gif"></div></center>
            <div class="modal-body" id="display">
               
            </div>
            
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
