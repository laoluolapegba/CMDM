@Html.AntiForgeryToken()
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-search">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-4">
                                    Customer Name
                                </div>
                                <div class="col-md-8">
                                    @Html.CMdmEditorFor(model => model.SearchName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.BRANCH_CODE)
                                </div>
                                <div class="col-md-8">
                                    @Html.CMdmDropDownList("BRANCH_CODE", Model.Branches)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4">
                                    <button type="button" id="search-que" class="btn btn-primary btn-search">
                                        <i class="fa fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="dqque-grid"></div>

                    <script>
                        $(document).ready(function () {
                            $("#dqque-grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("List", "GoldenRecords"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: additionalData
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors"
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    pageSize: @(defaultGridPageSize),
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    pageSizes: [@(gridPageSizes)],
                                    @Html.Partial("_GridPagerMessages")
                                },
                                editable: {
                                    confirmation: "Delete?",
                                    mode: "inline"
                                },
                                scrollable: false,
                                columns: [
                                   {
                                       field: "GOLDEN_RECORD",
                                       title: "Record Id",
                                       width: 100,
                                       template: '<a href="@Url.Content("~/GoldenRecords/AuthList/")#=GOLDEN_RECORD#">#:GOLDEN_RECORD#</a>'
                                         
                                   },
                                   
                                    {
                                    field: "FULL_NAME",
                                    title: "Customer Full name",
                                    width: 200,
                                    headerAttributes: { style: "text-align:left" },
                                    attributes: { style: "text-align:left" },

                                    },
                                    {
                                        field: "BVN",
                                        title: "BVN",
                                        width: 100
                                    },{
                                    field: "SEX",
                                    title: "Gender",
                                    width: 100,
                                    
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },

                                    },   
                                {
                                    field: "RESIDENTIAL_ADDRESS",
                                    title: "Address",
                                    width: 200
                                },
                                {
                                    field: "DATE_OF_BIRTH",
                                    title: "Date of Birth",
                                    width: 80,
                                    type: "date",
                                    format: "{0:G}",
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },

                                },{
                                    field: "CUSTOMER_TYPE",
                                    title: "Customer Type",
                                    width: 80,
                                    headerAttributes: { style: "text-align:left" },
                                    attributes: { style: "text-align:left" },

                                },{
                                    field: "CUSTOMER_NO",
                                    title: "Customer Id",
                                    width: 100
                                    }]
                            });
                        });
                    </script>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            //search button
                            $('#search-que').click(function () {
                                //search
                                var grid = $('#dqque-grid').data('kendoGrid');
                                grid.dataSource.page(1); //new search. Set page size to 1
                                //grid.dataSource.read(); we already loaded the grid above using "page" function
                                return false;
                            });

                            $("#@Html.FieldIdFor(model => model.SearchName)").keydown(function (event) {
                                if (event.keyCode == 13) {
                                    $("#search-que").click();
                                    return false;
                                }
                            });
                        });

                        function additionalData() {
                            var data = {
                                SearchName: $('#@Html.FieldIdFor(model => model.SearchName)').val(),
                                BRANCH_CODE: $('#BRANCH_CODE').val(),
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

