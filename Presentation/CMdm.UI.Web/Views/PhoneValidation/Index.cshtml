@model PagedList.IPagedList<CMdm.Entities.Domain.Customer.CMDM_PHONEVALIDATION_RESULTS>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Phone Number Validation";
}
@*<h2>CMDM PHONE VALIDATION RESULTS</h2>*@
<p>
    @*@Html.ActionLink("Create New", "Create")*@

    <div class="col-md-12">
        <!-- Horizontal Form -->
        <!-- /.box-body -->
    </div>


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <br />
                        <div class="form-group">
                            <label>Find by Branch</label>

                            @Html.DropDownList("branch", null, "Please select", htmlAttributes: new { @class = "form-control", @required = "required" })

                        </div>
                        <div class="box-footer">
                            <button class="btn btn-warning"><a href="@Url.Action("ExportListFromTsv", "PhoneValidation")" style="color:white">Export to Excel</a></button>
                            <button type="submit" class="btn bg-purple pull-right">Search</button>
                        </div>
                    }

                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    BRANCH CODE
                                </th>
                                <th>
                                    CUSTOMER ID
                                </th>
                                <th>
                                    LAST NAME
                                </th>
                                <th>
                                    MIDDLE NAME
                                </th>
                                <th>
                                    FIRST NAME
                                </th>
                                <th>
                                    LAST RUN DATE
                                </th>
                                <th>REASON</th>
                                <th>
                                    PHONE NO
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BRANCH_CODE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CUSTOMER_NO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CUST_LAST_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CUST_MIDDLE_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CUST_FIRST_NAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LAST_RUN_DATE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.REASON)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PHONE_NO)
                                    </td>
                                    <!-- <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CUSTOMER_NO }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.CUSTOMER_NO }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.CUSTOMER_NO })
                                    </td>
                                       -->
                                </tr>

                            }
                        </tbody>

                    </table>
                    <br />
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
            </div>
        </div>
    </div>
