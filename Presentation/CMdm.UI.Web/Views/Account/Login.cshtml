@model CMdm.UI.Web.Models.LoginModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CMdm Web</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/AdminLTE/bootstrap/css")
    @Styles.Render("~/AdminLTE/plugins/font-awesome/css")
    @Styles.Render("~/AdminLTE/plugins/ionicons/css")
    @Styles.Render("~/AdminLTE/dist/css")
    @Styles.Render("~/AdminLTE/plugins/icheck/css/sqare/blue")
    @Styles.Render("~/Content/customlogin.css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
</head>
<body>
    

    <div class="wrapper full-page-wrapper page-auth page-login text-center">
        <div class="inner-page">
            <div class="logo">
                <a href="#"><img src="~/Content/images/logo.png" alt="" /></a>
            </div>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()  ;//to prevent CSRF attack
                @Html.ValidationSummary(true, "Login failed. Check your login details.", new { @class = "text-danger" });

                <div class="login-box center-block">
                    <div class="form-horizontal">
                        <p class="title">Use your domain username and password</p>
                        <label for="username" class="control-label">Username</label>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <label for="password" class="control-label">Password</label>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <label for="token" class="control-label">Token</label>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Token, new { @class = "form-control" })
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    @Html.ValidationMessageFor(m => m.Token, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @*<div class="checkbox">
                    @Html.CheckBox("RememberMe", false, new { @class = "toggle checkbox" })
                    @Html.LabelFor(m => m.RememberMe)
                </div>*@
                                <br />
                            </div>
                            <div class="ui horizontal icon divider"><i class="circular user icon"></i></div>

                        </div>
                        <button class="btn btn-warning btn-lg btn-block btn-auth" type="submit"><i class="fa fa-arrow-circle-o-right"></i> Login</button>
                    </div>
                    <div class="links">
                        @*<p><a href="#">Forgot Username or Password?</a></p>
                        <p><a href="#">Create New Account</a></p>*@
                        <br />
                        <p>&copy; @DateTime.Now.Year - Bluechip Technologies Limited.</p>

                    </div>
                </div>
            }
        </div>
    </div>

    @Scripts.Render("~/AdminLTE/plugins/jquery/js")
    @Scripts.Render("~/AdminLTE/bootstrap/js")
    @Scripts.Render("~/AdminLTE/plugins/icheck/js")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/js")
    @Scripts.Render("~/Scripts/Account/Login")

</body>
</html>
